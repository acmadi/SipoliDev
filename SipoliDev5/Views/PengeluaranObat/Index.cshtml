                                                Sortby = ViewBag.SortTanggalParameter,
                                                Date = Request.QueryString["Date"],
                                                Month = Request.QueryString["Month"],
                                                Year = Request.QueryString["Year"],
                                                Obat = Request.QueryString["Obat"],
                                                Pasien = Request.QueryString["Pasien"],
                                            })
                                        </th>
