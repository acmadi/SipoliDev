@model SipoliDev5.Models.Obat

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Ubah Data Obat</h2>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <label class="col-md-2 control-label">Nama Obat</label>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Nama, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nama)
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Satuan Obat</label>
            <div class="col-md-4">
                @Html.DropDownList("SatuanObatID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SatuanObatID)
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Golongan Obat</label>
            <div class="col-md-4">
                @Html.DropDownList("GolonganObatID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GolonganObatID)
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Kegunaan</label>
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.Kegunaan, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Kegunaan)
            </div>
        </div>

        @Html.Hidden("before", null, htmlAttributes: new { @class = "form-control", @value = @ViewBag.before })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Simpan" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@if (@ViewBag.error == true)
{
    <br />
    <div class="alert alert-danger alert-error">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Error!</strong> @ViewBag.pesan.
    </div>
}
<div>
    @Html.ActionLink("Kembali ke List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
