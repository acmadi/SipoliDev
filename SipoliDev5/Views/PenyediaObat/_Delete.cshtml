@model SipoliDev5.Models.PenyediaObat

@{
    ViewBag.Title = "Delete";
}
<style>
    .modal-content {
        width: 600px !important;
        margin: 30px auto !important;
    }
</style>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Hapus Penyedia Obat</h4>
        </div>
        <div class="modal-body">
            <p>Anda yakin akan menghapus data ini?</p>
            
                    <dl class="dl-horizontal">
                        <dt>
                            <label class="col-md-2 control-label">Nama</label>
                        </dt>

                        <dd>
                            : @Html.DisplayFor(model => model.Nama)
                        </dd>

                        <dt>
                            <label class="col-md-2 control-label">Kota/Kabupaten</label>
                        </dt>

                        <dd>
                            : @Html.DisplayFor(model => model.KotaKabupaten.Nama)
                        </dd>
               
                        <dt>
                            <label class="col-md-1 control-label">CP</label>
                        </dt>

                        <dd>
                            : @Html.DisplayFor(model => model.ContactPerson)
                        </dd>

                        <dt>
                            <label class="col-md-1 control-label">No.</label>
                        </dt>

                        <dd>
                            : @Html.DisplayFor(model => model.NomorContactPerson)
                        </dd>
                    </dl>
            <div class="alert alert-danger"><strong>Perhatian!!</strong> Data penyedia obat <strong>@Model.Nama</strong> pada <strong>@Html.ActionLink("Pengadaan Obat", "Index", "PengadaanObat", null, new { @class = "text-danger", @style = "text-decoration: underline" })</strong> juga akan terhapus.</div>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger col-lg-offset-9">Hapus</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
            }
            </div>       
        </div>
    </div>
<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
