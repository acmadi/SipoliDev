@using PagedList;
@using PagedList.Mvc;

<!--Tabel Daftar Pasien Mahasiswa-->
@model IPagedList<SipoliDev5.Models.ViewModels.DaftarPasien>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Pasien Mahasiswa";
}

<h2>Daftar Pasien Mahasiswa</h2>




<div class="col-lg-12">
    <table class="table">
        <tr>
            <th>No.</th>
            <th>
                @*@Html.DisplayNameFor(model => model.Nama)*@
                Nama
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Age)*@
                Umur
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TanggalRegis)*@
                Tanggal Registrasi
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.JenisKelaminID)*@
                Jenis Kelamin
            </th>
            <th></th>

        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nama)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TanggalRegis)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.JenisKelaminID)*@
                    @if (item.JenisKelaminID == 1)
                    {
                        <span>Laki-laki</span>
                    }
                    else
                    {
                        <span>Perempuan</span>
                    }
                </td>


                <td>
                    <a href="@Url.Action("Delete", "DaftarPasien", new { id = item.ID})"><span>Delete</span></a>
                </td>
            </tr>
        }

    </table>

    <center>
        @Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page
}), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true, MaximumPageNumbersToDisplay = 5 })
    </center>
</div>

