@model SipoliDev5.Models.Login


@{
    ViewBag.Title = "Login";
}


<link rel="stylesheet" type="text/css" href="~/Content/loginForm.css" />
<script src="~/Scripts/loginForm.js" type="text/javascript"></script>

<div class="row">
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row-fluid user-row">
                        <img src="~/Content/Image/loginLogo2.png" class="img-responsive" alt="Conxole Admin" />
                    </div>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @role = "form", @class = "form-signin" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()

                        <fieldset>
                            <label class="panel-login">
                                <span class="login_result"></span>
                            </label>
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Username" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            <br />
                            <input class="btn btn-lg btn-success btn-block" type="submit" id="login" value="Login »">
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>

</div>










