
@{
    ViewBag.Title = "Laporan";
}

<h2>Cetak Laporan</h2><hr />

<div class="row">

    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4><strong><span class="glyphicon glyphicon-info-sign"></span> Laporan Kunjungan</strong> </h4>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("ViewKunjunganReport", "KunjunganPasien", FormMethod.Get, new { @target = "_blank", @class = "form-horizontal" }))
                            {

                                <div class="form-group">
                                    <label class="control-label col-sm-4">Periode Bulan</label>
                                    <div class="col-sm-6">
                                        <select class="form-control" name="bulan">
                                            <option value="">--Pilih Bulan--</option>
                                            <option value="1">Januari</option>
                                            <option value="2">Februari</option>
                                            <option value="3">Maret</option>
                                            <option value="4">April</option>
                                            <option value="5">Mei</option>
                                            <option value="6">Juni</option>
                                            <option value="7">Juli</option>
                                            <option value="8">Agustus</option>
                                            <option value="9">September</option>
                                            <option value="10">Oktober</option>
                                            <option value="11">Nopember</option>
                                            <option value="12">Desember</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class=" control-label col-sm-4">Tahun</label>
                                    <div class="col-sm-6">
                                        <select class="form-control" name="tahun">
                                            <option value="">--Pilih Tahun--</option>
                                            <option value="2015">2015</option>
                                            <option value="2014">2014</option>
                                            <option value="2013">2013</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4">Lokasi Poliklinik</label>
                                    <div class="col-sm-6">
                                        <select class="form-control" name="klinik">
                                            <option value="">--Pilih Klinik--</option>
                                            <option value="1">Dramaga</option>
                                            <option value="2">Baranangsiang</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-4 col-sm-6">
                                        <button class="btn btn-primary" type="submit">Cetak</button>
                                    </div>
                                </div>
                            }
                        </div>
                        
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4><strong><span class="glyphicon glyphicon-info-sign"></span> Laporan Daftar Pasien</strong> </h4>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("ViewDaftarPasienReport", "DaftarPasien", FormMethod.Get, new { @target = "_blank", @class="form-horizontal" }))
                            {
                                    <div class="form-group">
                                        <label class="control-label col-md-4">Periode Bulan</label>
                                        <div class="col-md-6">
                                            <select class="form-control" name="bulan">
                                                <option value="">--Pilih Bulan--</option>
                                                <option value="1">Januari</option>
                                                <option value="2">Februari</option>
                                                <option value="3">Maret</option>
                                                <option value="4">April</option>
                                                <option value="5">Mei</option>
                                                <option value="6">Juni</option>
                                                <option value="7">Juli</option>
                                                <option value="8">Agustus</option>
                                                <option value="9">September</option>
                                                <option value="10">Oktober</option>
                                                <option value="11">Nopember</option>
                                                <option value="12">Desember</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-4">Tahun</label>
                                        <div class="col-md-6">
                                            <select class="form-control" name="tahun">
                                                <option value="">Tahun</option>
                                                <option value="2015">2015</option>
                                                <option value="2014">2014</option>
                                                <option value="2013">2013</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-4 col-sm-6">
                                            <button class="btn btn-primary" type="submit">Cetak</button>
                                        </div>
                                    </div>
                                    
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <p>
                        <i>*) Laporan data penyakit dicetak melalui menu Data Penyakit</i>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>