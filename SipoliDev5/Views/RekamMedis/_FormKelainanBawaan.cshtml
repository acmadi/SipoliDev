@model SipoliDev5.Models.ViewModels.RekamMedisKelainanBawaan


<div class="popover-markup-kelainan">
    <a href="#" class="trigger btn btn-xs btn-default">Tambah Data</a>
    <div class="head hide text-info">
        <strong> Kelainan Bawaan</strong>
        @*<button type="button" id="close" class="close">&times;</button>*@
    </div>

    <div class="content hide">
        @using (Ajax.BeginForm("CreateKelainanBawaan",
                    new AjaxOptions
                    {
                        //Confirm = "Data sudah benar?",
                        HttpMethod = "Post",
                        InsertionMode = InsertionMode.Replace,
                        LoadingElementId = "loadingKelainanBawaan",
                        UpdateTargetId = "KelainanBawaan"
                    }))
        {
            <div class="form">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="hidden" name="PasienID" value="@ViewBag.id" />
                <div class="form-group">
                    @Html.LabelFor(model => model.KelainanBawaanID, null, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.KelainanBawaanID, ViewData["isiKelainanList"] as List<SelectListItem>, htmlAttributes: new { @class = "form-control input-sm" })
                    @*@Html.EditorFor(model => model.Tahun, new { htmlAttributes = new { @class = "form-control input-sm", @type = "number" } })*@
                    @Html.ValidationMessageFor(model => model.KelainanBawaanID, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">

                    <input type="submit" value="Tambah" class="btn btn-xs btn-success" />
                    @*<input type="button" value="Batal" class="btn btn-xs btn-default btn-close" />*@
                    <label class="label-warning small" id="loadingKelainanBawaan" style="display:none">Menambahkan..</label>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $('.popover-markup-kelainan>.trigger').popover({
        html: true,
        title: function () {
               return $(this).parent().find('.head').html();
        },
        content: function () {
            return $(this).parent().find('.content').html();
        }
    });

</script>





