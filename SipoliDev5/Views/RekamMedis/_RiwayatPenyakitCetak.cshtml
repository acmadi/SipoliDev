@model IEnumerable<SipoliDev5.Models.ViewModels.RekamMedisRiwayatPenyakit>

<div class="row">
    <div class="col-lg-12" style="margin-left:60px;margin-right:20px;">
        <strong> <h4> <span class="glyphicon glyphicon-info-sign"></span> Riwayat Penyakit</h4></strong>
        
        
        <table class="table">
            <tr>
                <th style="text-align: center;">
                    @Html.DisplayNameFor(model => model.No)
                </th>
                <th style="text-align: center;">
                    @Html.DisplayNameFor(model => model.Tahun)
                </th>
                <th style="text-align: center;">
                    @Html.DisplayNameFor(model => model.NamaPenyakit)
                </th>
            </tr>

            @if (Model.Count() >= 1)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center;">
                            @Html.DisplayFor(modelItem => item.No)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(modelItem => item.Tahun)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(modelItem => item.NamaPenyakit)
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3"><center> <i>Tidak ada data</i> </center></td>
                </tr>
            }

            

        </table>
    </div>
</div>
