@model IEnumerable<SipoliDev5.Models.GolonganObat>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-8"><h4>Daftar Golongan Obat</h4></div>
@if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("StafBaranangsiang"))
{
    <div class="col-lg-4" style="margin-top:10px; margin-left:-15px">@Html.ActionLink("Tambah", "Create", "", new { @class = "btn btn-default btn-xs" })</div>
}
</div>

    
<br />
<table class="table">
    <tr>
        <th>
           Nama
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nama)
        </td>
@if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("StafBaranangsiang"))
{
        <td>
            @Html.ActionLink("Ubah", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Hapus", "Delete", new { id=item.ID })
        </td>
}
    </tr>
}

</table>
